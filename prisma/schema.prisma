datasource db {
  provider = "sqlite"
  url = env("DATABASE_URL")
}

model Teacher {
  id            Int       @id
  name          String
}


model Room {
  id            Int       @id
  name          String
  computerRoom  Boolean
}


model Cours {
  start         String
  end           String
  summary       String
  location      Room
}


model Schedule {
  id            String    @id
  classes       Cours[]
}